        "think.*through",
        "reason(ing)?\\s+(about|through)",
        "\\bwhy does\\b",
        "\\bexplain why\\b"
      ]
    },
    {
      "name": "code",
      "weight": 0.15,
      "max": 3,
      "patterns": [
        "```",
        "\\bfunction\\b",
        "\\bclass\\b",
